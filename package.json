{
  "name": "feishu-doc-helper",
  "displayName": "飞书文档助手",
  "version": "1.0.3",
  "description": "飞书文档助手：支持批量导出飞书云文档及知识库，文档随机漫游等功能。",
  "author": "三此君",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "dev:brave": "plasmo dev --target=brave-mv3",
    "build": "run-s build:*",
    "build:chrome": "plasmo build --zip --tag=feishu-doc-helper",
    "build:edge": "plasmo build --target=edge-mv3 --zip --tag=feishu-doc-helper",
    "build:firefox": "plasmo build --target=firefox-mv2 --zip --tag=feishu-doc-helper",
    "build:brave": "plasmo build --target=brave-mv3 --zip --tag=feishu-doc-helper",
    "build:opera": "plasmo build --target=opera-mv3 --zip --tag=feishu-doc-helper",
    "package": "plasmo package"
  },
  "dependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@notionhq/client": "^2.2.5",
    "crypto-js": "^4.1.1",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.227",
    "@types/file-saver": "^2.0.5",
    "@types/node": "18.15.11",
    "@types/react": "^18.0.32",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.2",
    "antd": "5.5.0",
    "jquery": "^3.6.0",
    "lodash.escaperegexp": "^4.1.2",
    "prettier": "2.8.7",
    "typescript": "5.0.3"
  },
  "manifest": {
    "homepage_url": "https://github.com/sancijun/feishu-doc-helper",
    "permissions": [
      "tabs",
      "activeTab",
      "cookies",
      "storage",
      "commands"
    ],
    "host_permissions": [
      "*://*.feishu.cn/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/qrcode/*.png"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
